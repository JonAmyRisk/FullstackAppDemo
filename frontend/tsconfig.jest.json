{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "jsx": "react-jsx",                 
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "types": [
      "jest",                           
      "@testing-library/jest-dom",     
      "node"                            
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.d.ts"                   
  ]
}